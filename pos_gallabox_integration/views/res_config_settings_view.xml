<odoo>
    <record id="res_config_settings_view_form_inherit_gallabox" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.gallabox</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="point_of_sale.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//app[@name='point_of_sale']" position="inside">
                <block title="Gallabox WhatsApp Integration" id="gallabox_settings">
                    <setting string="Gallabox API Credentials" help="Configure your Gallabox API keys here">
                        <div class="content-group">
                            <div class="row mt16">
                                <label for="gallabox_api_key" class="col-lg-3 o_light_label"/>
                                <field name="gallabox_api_key" password="True"/>
                            </div>
                            <div class="row">
                                <label for="gallabox_api_secret" class="col-lg-3 o_light_label"/>
                                <field name="gallabox_api_secret" password="True"/>
                            </div>
                            <div class="row">
                                <label for="gallabox_channel_id" class="col-lg-3 o_light_label"/>
                                <field name="gallabox_channel_id"/>
                            </div>
                        </div>
                    </setting>
                </block>
            </xpath>
        </field>
    </record>
</odoo>