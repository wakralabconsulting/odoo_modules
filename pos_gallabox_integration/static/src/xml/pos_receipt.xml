<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-inherit="point_of_sale.OrderReceipt" t-inherit-mode="extension">
        <xpath expr="//div[hasclass('pos-receipt')]" position="replace">
            <div class="pos-receipt">
                <div style="text-align:center;">
                    <t t-if="props.data.headerData.company.logo">
                        <img t-att-src="props.data.headerData.company.logo" style="width: 70%; margin-bottom: 10px;"/>
                    </t>
                </div>

                <div style="text-align:center; border-bottom:1pt dashed black; padding: 10px 0;">
                    <div style="font-size: 20pt; font-weight: 900;">
                        # <t t-esc="props.data.session_receipt_number"/>
                    </div>
                </div>

                <table style="width:100%; font-size:9pt; font-weight:bold; margin-top:5px;">
                    <tr>
                        <td>Order ID: <t t-esc="props.data.name"/></td>
                        <td style="text-align:right;">العدد</td>
                    </tr>
                    <tr>
                        <td>Date: <t t-esc="props.data.date"/></td>
                        <td style="text-align:right;">التاريخ</td>
                    </tr>
                </table>

                <table style="width:100%; margin-top:10px; border-bottom:1pt dashed black; font-size:10pt;">
                    <tr style="border-bottom: 1pt dashed black;">
                        <th style="text-align:left;">Amount</th>
                        <th style="text-align:center;">Qty</th>
                        <th style="text-align:right;">Product</th>
                    </tr>
                    <t t-foreach="props.data.orderlines" t-as="line" t-key="line.id">
                        <tr>
                            <td><t t-esc="props.formatCurrency(line.price_display)"/></td>
                            <td style="text-align:center;"><t t-esc="line.qty"/></td>
                            <td style="text-align:right;"><t t-esc="line.product_name"/></td>
                        </tr>
                    </t>
                </table>

                <div style="font-size: 14pt; font-weight: bold; text-align: center; padding: 10px;">
                    TOTAL: <t t-esc="props.formatCurrency(props.data.amount_total)"/>
                </div>

                <div style="font-size: 9pt; text-align: center; margin-top: 10px;">
                    <b>Shop at: www.torba.co</b><br/>
                    <i>*** Customer Copy ***</i>
                </div>
            </div>
        </xpath>
    </t>
</templates>